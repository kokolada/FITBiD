@using FITBiD_empty.Models
@model FITBiD_empty.Models.Radnik

<br />
@using (Html.BeginForm("Save", "Workers")) {
	<div class="form-group">
		<div>@Html.TextBoxFor(model => model.Id, new { @class = "form-control" , @type = "hidden" })</div>
	</div>
	<div class="form-group">
		<label for="imeInput">Ime</label>
		<div>@Html.TextBoxFor(model => model.Ime, new { @class = "form-control" })</div>
	</div>
	<div class="form-group">
		<label for="prezimeInput">Prezime</label>
		<div>@Html.TextBoxFor(model => model.Prezime, new { @class = "form-control" })</div>
	</div>
	<div class="form-group">
		<label for="brojIndeksaInput">Broj indeksa</label>
		<div>@Html.TextBoxFor(model => model.Username, new { @class = "form-control" })</div>
	</div>
	<div class="form-group">
		<label for="passwordInput">Lozinka</label>
		<div>@Html.TextBoxFor(model => model.Password, new { @class = "form-control" })</div>
	</div>
	<div class="form-group">
		<label for="emailInput">Email</label>
		<div>@Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })</div>
	</div>
	<button type="submit" class="btn btn-primary">Sačuvaj</button>
}