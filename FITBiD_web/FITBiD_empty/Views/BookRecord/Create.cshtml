@model FITBiD_empty.ViewModels.BooksRecordCreateViewModel

@{
	ViewBag.Title = "Create";
}

<h3>Izdavanje knjige</h3>


@using (Html.BeginForm("Save", "BookRecord")) 
{
	@Html.AntiForgeryToken()
	
	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		
		<div class="form-group">
			<label class="control-label col-md-2">Knjiga</label>
			<div class="col-md-10">
				<select name="knjiga" class="form-control">
					<option>Odaberi knjigu</option>
					@foreach(FITBiD_empty.Models.Knjiga k in Model.Knjige){
						<option value="@k.Id">@k.Naziv</option>
					}
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Student</label>
			<div class="col-md-10">
				<select name="student" class="form-control">
					<option>Odaberi studenta</option>
					@foreach (FITBiD_empty.Models.Student k in Model.Studenti) {
						<option value="@k.Id">@k.BrojIndeksa</option>
					}
				</select>

			</div>
		</div>
		@*<div class="form-group">
			@Html.LabelFor(model => model, "Datum vraćanja", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.DatumVracanja, new { @class = "form-control" })
			</div>
		</div>*@

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Dodaj" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
