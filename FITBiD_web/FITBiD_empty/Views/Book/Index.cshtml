@using Mvc.RazorTools.FontAwesome
@model System.Collections.Generic.IEnumerable<FITBiD_empty.Models.Knjiga>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">@Html.FontAwesome(FontAwesomeIconSet.Book) Knjige</h2>

<p>
    @Html.ActionLink("+ Dodaj knjigu", "Create",null, new { @class = "btn btn-default btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayName("Godina objavljivanja")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Barcode)
        </th>
        <th>
            @Html.DisplayName("Oznaka stalaže")
        </th>
        <th>
            @Html.DisplayName("Prodaja")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cijena)
        </th>
        <th>Akcije</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GodinaObjavljivanja.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Barcode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OznakaStalaze)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZaProdaju)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cijena)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { bookId = item.Id }, new { @class = "btn btn-default btn-sm buttonThinStyle" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm buttonThinStyle" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm buttonThinStyle" })
        </td>
    </tr>
}

</table>
