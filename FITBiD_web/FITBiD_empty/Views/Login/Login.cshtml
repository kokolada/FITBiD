@using Mvc.RazorTools.FontAwesome

@{
	ViewBag.Title = "Login na ";
}
<div class="container">
    <br /><br /><br />
    <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">Login na FIT biblioteka</div>
            <div class="panel-body">
                <form class="form-horizontal" role="form" method="post">
                    <div class="form-group">
                        <label for="usernameInputLabel" class="col-sm-4 control-label">Korisničko ime</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="usernameInput" name="username" placeholder="Korisničko ime">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="passwordInput" class="col-sm-4 control-label">Lozinka</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" name="password" id="passwordInput" placeholder="Lozinka">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Zapamti me
                                </label>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary pull-right">Prijava</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>