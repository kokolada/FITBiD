
@{
	ViewBag.Title = "Login";
}
	<br />
	<form class="form-horizontal" role="form" method="post">
		<div class="form-group">
			<label for="usernameInputLabel" class="col-sm-2 control-label">Korisničko ime</label>
			<div class="col-sm-10">
				<input class="form-control" id="usernameInput" name="username" placeholder="Korisničko ime">
			</div>
		</div>
		<div class="form-group">
			<label for="passwordInput" class="col-sm-2 control-label">Lozinka</label>
			<div class="col-sm-10">
				<input type="password" class="form-control" name="password" id="passwordInput" placeholder="Lozinka">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label>
						<input type="checkbox"> Zapamti me
					</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Prijava</button>
			</div>
		</div>
	</form>			

