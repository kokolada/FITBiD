@model FITBiD_empty.ViewModels.EvidencijaProdajeKnjigaViewModel

@{
	ViewBag.Title = "Create";
}

<h2>Prodaja knjige</h2>


@using (Html.BeginForm()) 
{
	@Html.AntiForgeryToken()
	
	<div class="form-horizontal">
		
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.Knjige,"Knjige", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<select name="knjiga" class="form-control">
					<option>Odaberi knjigu</option>
					@foreach (FITBiD_empty.Models.Knjiga k in Model.Knjige)
					{
						<option value="@k.Id">@k.Naziv</option>
					}
				</select>
			</div>
		</div>


		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Potvrdi" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
