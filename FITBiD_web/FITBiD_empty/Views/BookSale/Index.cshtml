@using FITBiD_empty.ViewModels
@using Mvc.RazorTools.FontAwesome
@model FITBiD_empty.ViewModels.BookSaleViewModel

@{
    ViewBag.Title = "View";
}

<h2 class="page-header">@Html.FontAwesome(FontAwesomeIconSet.BarChartO) Evidencija prodaje knjiga</h2>

<p>
    @Html.ActionLink("+ Prodaj knjigu", "Create",null,new {@class = "btn btn-default btn-sm"})
</p>
<table class="table">
    <tr>
        <th>
            Naziv knjige
        </th>
        <th>
            Radnik
        </th>
        <th>
            Datum evidencije
        </th>
        <th>
            Opcije
        </th>
    </tr>

@foreach (var item in Model.listaEvidencijaKnjigaZaProdaju) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazivKnjge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Radnik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumEvidencije)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-sm buttonThinStyle" }) |*@
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm buttonThinStyle" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm buttonThinStyle" })
        </td>
    </tr>
}

</table>
