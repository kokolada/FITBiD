@model FITBiD_empty.ViewModels.BooksReservationViewModel
@using Mvc.RazorTools.FontAwesome
@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">@Html.FontAwesome(FontAwesomeIconSet.Tags) Sve rezervacije</h2>


<table class="table">
	<tr>
		<th>
			Naziv knjge
		</th>
		<th>
			Broj indeksa
		</th>
		<th>
			Student
		</th>
		<th>
			Datum rezervacije
		</th>
		<th>
			Rezervacija potvrđena
		</th>
		<th>
            Opcije
        </th>
	</tr>
    @foreach(FITBiD_empty.ViewModels.BooksReservationViewModel.RezervacijaInfo item in Model.rezervacije) { 
    <tr>
        <td>
            @item.NazivKnjige
        </td>
		<td>
			@item.BrojIndeskaStudenta
		</td>
        <td>
            @item.ImeStudenta @item.PrezimeStudenta
        </td>
        <td>
            @item.DatumRezervacije
        </td>
        <td>
            @(item.RezervacijaPotvrdjena?"Da":"Ne")
        </td>
		<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-sm buttonThinStyle" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm buttonThinStyle" })
            
        </td>
    </tr>
    }

</table>
