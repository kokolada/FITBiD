@model FITBiD_empty.ViewModels.EntryRecordCreateViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EvidencijaPrijava</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
			<label class="control-label col-md-2">Kolicina</label>
            <div class="col-md-10">
				<input type="number" name="kolicina" class="form-control"/>
            </div>
        </div>

		<div class="form-group">
			<label class="control-label col-md-2">Student</label>
			<div class="col-md-10">
				<select name="studentId" class="form-control">
					<option>Odaberi studenta</option>
					@foreach (FITBiD_empty.Models.Student k in Model.listaStudenata) {
						<option value="@k.Id">@k.BrojIndeksa</option>
					}
				</select>
			</div>
		</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sačuvaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
